{
  "name": "smart-canteen-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Canteen System - serving Student, Parent, School, and Canteen portals",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "seed": "node src/scripts/seed.js",
    "seed:student": "node src/scripts/seedStudent.js",
    "init:db": "node src/scripts/initDatabase.js",
    "test:api": "node test-api.js",
    "indexes": "node scripts/create-indexes.js",
    "indexes:create": "node scripts/create-indexes.js",
    "update:parents": "node scripts/update-parent-names.js",
    "token:generate": "node src/scripts/generateRoleQueryToken.js",
    "indexes:role-query": "node src/scripts/createRoleQueryIndexes.js",
    "indexes:optimize": "node src/scripts/optimizeRoleQueryIndexes.js",
    "relations:validate": "node src/scripts/validateAllRelations.js",
    "cache:clear": "node src/scripts/clearRoleQueryCache.js",
    "relations:check": "node src/scripts/setupRoleQueryRelations.js",
    "orders:check": "node src/scripts/fixOrderRelations.js --dry-run",
    "orders:fix": "node src/scripts/fixOrderRelations.js --fix-all",
    "db:export": "node src/scripts/exportDatabase.js",
    "db:export:csv": "node src/scripts/exportDatabase.js --format csv",
    "db:schema": "node src/scripts/exportDatabaseSchema.js",
    "test:dify": "node test-dify-config.js",
    "test:dify:stream": "node test-dify-stream.js",
    "test:dify:all": "node test-all-dify-endpoints.js",
    "test:dify:response": "node test-dify-endpoints-response.js",
    "test:dify:roles": "node test-dify-by-roles.js"
